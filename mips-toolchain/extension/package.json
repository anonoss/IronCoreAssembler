{
  "name": "mipsduino-assembler",
  "displayName": "MIPSduino Assembler",
  "description": "Complete MIPS Assembly development environment with MicroCoreASM hardware integration",
  "version": "2.0.0",
  "publisher": "mipsduino",
  "icon": "images/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/mipsduino/MIPSduino"
  },
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Programming Languages",
    "Debuggers",
    "Snippets"
  ],
  "keywords": [
    "mips",
    "assembly",
    "assembler",
    "arduino",
    "microprocessor",
    "MicroCoreASM"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./extension.js",
  "contributes": {
    "languages": [
      {
        "id": "mips",
        "aliases": [
          "MIPS Assembly",
          "mips",
          "MIPS"
        ],
        "extensions": [
          ".asm",
          ".s",
          ".mips"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "mips",
        "scopeName": "source.mips",
        "path": "./syntaxes/mips.tmLanguage.json"
      }
    ],
    "commands": [
      {
        "command": "mipsduino.run",
        "title": "MIPSduino: Run Current File",
        "icon": "$(play)"
      },
      {
        "command": "mipsduino.build",
        "title": "MIPSduino: Build for MicroCoreASM",
        "icon": "$(tools)"
      },
      {
        "command": "mipsduino.showSymbols",
        "title": "MIPSduino: Show Symbol Table"
      }
    ],
    "keybindings": [
      {
        "command": "mipsduino.run",
        "key": "ctrl+shift+r",
        "mac": "cmd+shift+r",
        "when": "editorLangId == mips"
      },
      {
        "command": "mipsduino.build",
        "key": "ctrl+shift+b",
        "mac": "cmd+shift+b",
        "when": "editorLangId == mips"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "resourceLangId == mips",
          "command": "mipsduino.run",
          "group": "navigation"
        },
        {
          "when": "resourceLangId == mips",
          "command": "mipsduino.build",
          "group": "navigation"
        }
      ],
      "editor/title": [
        {
          "when": "resourceLangId == mips",
          "command": "mipsduino.run",
          "group": "navigation"
        }
      ]
    },
    "snippets": [
      {
        "language": "mips",
        "path": "./snippets/mips.json"
      }
    ],
    "configuration": {
      "title": "MIPSduino Assembler",
      "properties": {
        "mipsduino.executablePath": {
          "type": "string",
          "default": "",
          "description": "Path to MIPSduino executable. Leave empty to auto-detect."
        },
        "mipsduino.showOutputOnRun": {
          "type": "boolean",
          "default": true,
          "description": "Automatically show output panel when running code"
        },
        "mipsduino.clearOutputBeforeRun": {
          "type": "boolean",
          "default": true,
          "description": "Clear output panel before each run"
        }
      }
    }
  },
  "scripts": {
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/vscode": "^1.75.0",
    "vsce": "^2.15.0"
  }
}